# ============================================
# SENTRA Environment Configuration Template
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# For local development: Use local PostgreSQL
# For production: Use Vercel Postgres URL
DATABASE_URL=postgresql://user:password@localhost:5432/sentra_db

# ============================================
# BACKEND API CONFIGURATION
# ============================================
# Local development URLs
BACKEND_API_URL=http://localhost:3000/api
NEXT_PUBLIC_SOCKET_URL=http://localhost:4001

# Production: Replace with your Vercel app URL
# BACKEND_API_URL=https://your-app.vercel.app/api
# NEXT_PUBLIC_SOCKET_URL=https://your-ngrok-socket-url.ngrok-free.app

# ============================================
# FLASK AI BACKEND (YOLOv8)
# ============================================
# Local development
FLASK_AI_URL=http://localhost:5000
NEXT_PUBLIC_FLASK_URL=http://localhost:5000

# Production: Replace with ngrok URL
# NEXT_PUBLIC_FLASK_URL=https://your-ngrok-flask-url.ngrok-free.app

# ============================================
# WHATSAPP CONFIGURATION (Fonnte)
# ============================================
# Get your token from: https://fonnte.com
FONNTE_TOKEN=your_fonnte_token_here

# ============================================
# PUBLIC URL FOR IMAGES
# ============================================
# Local development
NGROK_URL=http://localhost:3000

# Production: Use ngrok URL (for WhatsApp/Telegram image access)
# NGROK_URL=https://your-ngrok-url.ngrok-free.app

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# For production
# NODE_ENV=production
# NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=your_bot_username_here

# ============================================
# GOOGLE MAPS API
# ============================================
# Get API key from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================================
# ANALYTICS & MONITORING (Optional)
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# NOTES
# ============================================
# 1. Never commit .env.local to git
# 2. For production, set these in Vercel dashboard
# 3. ngrok URLs change every restart (free plan)
# 4. Update Vercel env vars when ngrok URL changes
