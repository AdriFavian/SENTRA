# Production Environment Variables untuk Vercel
# Salin ini ke Vercel Dashboard → Settings → Environment Variables

# Database Configuration (PostgreSQL - bisa gunakan Vercel Postgres atau Supabase)
DATABASE_URL=postgresql://user:password@host:5432/database_name

# Backend API Configuration (masih localhost untuk development, atau gunakan ngrok)
BACKEND_API_URL=https://your-vercel-app.vercel.app/api
NEXT_PUBLIC_SOCKET_URL=https://YOUR_NGROK_SOCKET_URL

# Flask AI Backend (NGROK URL)
FLASK_AI_URL=https://YOUR_NGROK_FLASK_URL
NEXT_PUBLIC_FLASK_URL=https://YOUR_NGROK_FLASK_URL

# WhatsApp Configuration (Fonnte)
FONNTE_TOKEN=UEKGM5BfP2L1DMb8zaR5

# Public URL for WhatsApp images (NGROK URL untuk akses snapshot)
NGROK_URL=https://YOUR_NGROK_FLASK_URL

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-vercel-app.vercel.app

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Google Maps API (untuk production)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics (optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
